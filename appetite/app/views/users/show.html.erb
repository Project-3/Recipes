<script type="text/template" id="create-inventory">
<div id="inventory-form">
  <h2>Add An Ingredient</h2>
  <%= text_field_tag :ingredient, nil, placeholder: "ingredient name" %>
  <%= select_tag :group, options_for_select([["Protein", "protein"],["Produce", "produce"],["Dairy", "dairy"],["Grain", "grain"]]) %>
  <%= button_tag "ADD", id: "add-inventory" %>
</div>
</script>

<div id="content"></div>


<script type="text/javascript">
	String.prototype.nl2br = function() {
    	return this.replace(/\r\n/g, "<br /><br />");
	}
</script>

<script type="text/template" id="active-recipe"> 
	<div id="active-recipe-div">
		<h2>Active Recipes: </h2>
		<img class="recipe-pic" src="{{= recipe.image}}">
		<h2 class="recipe-title"> {{=  recipe.name }}</h2>
		<p class="recipe-ingredients">{{= recipe.ingredients.nl2br() }}</p>
		<button id="{{= recipe.id }}" class="dectivate-butt" style="{{ if (recipe.active == true){ }} background-color: green {{ } else { }} background-color: red {{ } }}">Deactivate?</button>
		<button class="delete-butt">Delete</button>

		<div id="update-ingredient">
		<h3>Ingredients Linked to Recipe: </h3> 
		{{ recipe.inventories.forEach(function(inventory){ }}
			<p>{{= inventory.ingredient }}</p>
		<button style="{{ if (inventory.avail == true){ }} background-color: green {{ } else { }} background-color: red {{ } }}" class="activate-butt">Used?</button>
		{{ }) }}
	</div>
</script>

<script type="text/template" id="recipe-result">
<h1>HOW DOES THIS SOUND...</h1>
	<div id="recipe-result-div">
		<h2 class="recipe-name">{{= recipe.name }}</h2>
		<p class="recipe-ingredients">{{= recipe.ingredients.nl2br() }}</p>
		<button class="save-button" id="{{= recipe.id }}">Save</button>
	</div>
</script>

<script type="text/template" id="each-recipe">
<h1>HOW ABOUT SOME...</h1>
	<div id="all-recipes-div">
		<h2><a href="#recipe/{{= recipe.id }}" class="recipe-title"> {{= recipe.name }}</a></h2>
		<p class="recipe-ingredients">{{= recipe.ingredients.nl2br() }}</p>
		<button id="{{= recipe.id }}" class="activate-butt" style="{{ if (recipe.active == true){ }} background-color: green {{ } else { }} background-color: red {{ } }}">Activate?</button>
		<button class="delete-butt">Delete</button>
	</div>
</script>

<!--show clicked on recipe-->
<script type="text/template" id="show-recipe">
<h1>This looks good, right?</h1>
	<div id="all-recipes-div">
		<h2>{{= recipe.name }}</a></h2>	
		<p class="recipe-ingredients">{{= recipe.ingredients.nl2br() }}</p>
		<p class="recipe-instructions">{{= recipe.instructions }}</p>
		<button id="{{= recipe.id }}" class="activate-butt" style="{{ if (recipe.active == true){ }} background-color: green {{ } else { }} background-color: red {{ } }}">Activate</button>
		<button class="delete-butt">Delete</button>
		<h2> From your inventory: </h2>
			{{ recipe.inventories.forEach(function(inventory) { }}
				<div class="invent-item"> 
				<h3 class= "invent-name">{{= inventory.ingredient }}
				<button id="{{= inventory.id }}" class="used" style="{{ if (inventory.avail == true){ }} background-color: green {{ } else { }} background-color: red {{ } }}"> ALL GONE ?</button></h3>
			{{ }); }}
	</div>
</script>

<script type="text/template" id="show-inventory">
		<h1>{{= inventory.ingredient }}</h1>
		<button id="avail-butt" style="{{ if (inventory.avail == true){ }} background-color: green {{ } else { }} background-color: red {{ } }}">Available?</button>
		<button class="delete-butt">Delete</button>
		<h2> Linked to these recipes: </h2>
		<div class="recipes-itemized"> 
			{{ inventory.recipes.forEach(function(recipe) { }}
				<h3 class="recipe-name">{{= recipe.name }}
				<button id="{{= recipe.id }}" class="active-butt" style="{{ if (recipe.active == true){ }} background-color: green {{ } else { }} background-color: red {{ } }}"> Active ?</button></h3>
			{{ }); }}
		</div>
</script>

<script type="text/template" id="each-inventory">
