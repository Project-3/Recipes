
<script type="text/template" id="all-inventory">
	<div id="all-inventory-div">
		<%= inventory.ingredient %><button class="avail_butt">Available?</button><button class="delete_butt">Delete</button><button id="search_butt" class="<%=inventory.ingredient%>-<%=inventory.id%>">Search</button>
	</div>
