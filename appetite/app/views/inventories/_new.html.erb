<div id="inventory-form">
  <%= form_for @inventory, html:{class: "pure-form"} do |f|  %>
    <%= f.text_field :ingredient, placeholder: "ingredient name" %>
    <%= f.select :group do %>
        <%[["Protein", "protein"],["Produce", "produce"],["Dairy", "dairy"],["Grain", "grain"]].each do |c| -%>
        <%= content_tag(:option, c.first, value:c.last)%>
    <%end%>
    <%end%>
    <%= f.hidden_field :avail, value: true %>
    <%= f.hidden_field :user_id, value: session[:user_id] %>
  <%= f.button "ADD", html:{class: "pure-button", id: "button-success"}%>
  <% end %>
</div>